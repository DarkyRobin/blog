<h1>Users List</h1>

<ul>
  <% @users.each do |user| %>
    <li><%= user.username %> </li>
    <%= button_to 'Update', update_user_path(user), method: :patch %>
    <%= button_to 'Edit', edit_user_path(user), method: :get %>
    <%= button_to 'Delete', delete_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</ul>

<%= link_to 'New User', new_user_path %>